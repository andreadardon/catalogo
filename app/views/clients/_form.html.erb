<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= form_for @client, html: {:multipart => true} do |f| %>
        <% if @client.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

            <ul>
            <% @client.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :nombre %><br>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :correo_electrónico %><br>
          <%= f.text_field :email %>
        </div>
        <div class="field">
          <%= f.label :teléfono %><br>
          <%= f.text_field :phone %>
        </div>
        <div class="field">
          <%= f.label :edad %><br>
          <%= f.number_field :age %>
        </div>
        <div class="field">
          <%= f.label :fecha_de_nacimiento %><br>
          <%= f.date_select :date_of_birth, :start_year=>1900,:end_year=>2016 %>
        </div>
        <div class="field">
          <%= f.label :sube_tu_avatar %><br>
          <%= f.file_field :image %>
        </div>
        <div class="actions">
          <%= f.submit 'Crear Cliente',  :class => 'btn btn-catalogo'%>
        </div>
      <% end %>
    </div>
  </div>
</div>