<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-4">
      <h1 class="titulo">Listado de Clientes</h1>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>

            <th>Nombre</th>
            <th>Correo Electrónico</th>
            <th>Teléfono</th>
            <th>Edad</th>
            <th>Fecha de Nacimiento</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td><%= client.name %></td>
              <td><%= client.email %></td>
              <td><%= client.phone %></td>
              <td><%= client.age %></td>
              <td><%= client.date_of_birth %></td>
              <td class="actions"><%= link_to 'Ver Cliente', client %></td>
              <td><%= link_to 'Editar ', edit_client_path(client) %></td>
              <td><%= link_to 'Eliminar', client, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-5">
      <%= link_to 'Crear Nuevo Cliente', new_client_path, class: "btn btn-catalogo" %>
    </div>
  </div>
  <br>
</div>
